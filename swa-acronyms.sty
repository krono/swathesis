\newcommand\listofacronyms[1][1]{%
  \begingroup

  \let\contentsname\listofloaname\relax
  \ac@listhead

  %determine if we have acros defined at all
  \newif\if@ac@listempty
  \@ac@listemptytrue
  \def\doacro{%
    \global\@ac@listemptyfalse\@gobble%
  }
  \ac@doacros\relax

  \if@ac@listempty
  \else

  \begin{acronym}[#1]
    % check for optional argument
    \def\@tempa{1}\def\@tempb{#1}%
    \ifx\@tempa\@tempb%
      % determine longest label into \ac@longest
      \def\doacro{\ac@setlongest@label}
      \ac@doacros\relax

      % adjust lengths
      \setlength{\labelwidth}{\ac@longest}%
      \leftmargin\z@
      \itemindent\dimexpr\labelwidth-\labelsep\relax
    \fi

      \let\makelabel\ac@label

      % print acros
      \let\doacro\printacroentry
      \ac@doacros\relax
  \end{acronym}
  \fi
  \endgroup
}