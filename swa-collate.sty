\providecommand\swa@theses{}
\newcommand*{\theses}[1]{%
  \xdef\swa@theses{#1}%
  \configureTheses%
}
\newcommand*{\swa@system}[1]{\input{#1/system}}

\newcommand*{\configureTheses}{%
  \@for\next:=\swa@theses\do{%
    \ifx\@empty\next\relax\else%
    \swa@system\next%
    \fi%
  }
}
\newcommand*{\includeThesesContent}{%
  \@for\next:=\swa@theses\do{%
    \ifx\@empty\next\relax\else%
    \swa@includedir\next%
    \fi%
  }
}

