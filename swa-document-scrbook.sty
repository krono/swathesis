\providecommand*\BCORTotPages{0}
\newcommand*\setbindingcorrection{%
  \ifnumcomp{\BCORTotPages}{=}{0}{
      \bindingcorrection[\papervolume]{60}{\papergrammage}
    }{%
      \bindingcorrection[\papervolume]{\BCORTotPages}{\papergrammage}
    }
}
